<button type="button" id="butt" class="btn btn-primary" onclick="open4()" data-toggle="modal" data-target="#exampleModal4" data-whatever="@mdo">New Evaluation Report</button>

<div class="modal fade" id="exampleModal4" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel4">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel4">Submit Organization Evaluation</h4>
      </div>
      	<%= form_for([@organization, Evaluationreport.new]) do |f| %>
		
			    <div class="field">
			      <%= f.hidden_field :organization_id, :value => @organization.id %>
            <%= f.hidden_field :admin_id, :value => current_user.id%>

      <div class="modal-body">
          <div class="form-group">
            <h5>Clean Ups Required:</h5>
		<%= f.text_field :cleanUpsRequired %>
          </div>
          <div class="form-group">
            <h5>Period Start Date:</h5>
			<%= f.text_field :evalPeriodStart, :id => "datepicker4", :value => Date.today %>
          </div>
          <div class="form-group">
            <h5>Period End Date:</h5>
			<%= f.text_field :evalPeriodEnd, :id => "datepicker5", :value => Date.today %>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit "Submit Report", class: "btn btn-success" %>
		<% end %>
      </div>
    </div>
  </div>
</div>
<div>


<script>

$('#exampleModal4').modal('show');
  $(window).load(function(){
        $('#exampleModal4').modal('hide');
    });
  
    
</script>
<script>
$('#datepicker4').datepicker({format: 'yyyy-mm-dd'});
$('#datepicker5').datepicker({format: 'yyyy-mm-dd'});
</script>
