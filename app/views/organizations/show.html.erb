<div class="table-container">
	<table class="data-table">
		<thead>
			<tr>
				<th>Organization Name</th>
				<th>Stree Address</th>
				<th>City</th>
				<th>State</th>
				<th>Zip Code</th>
				<th>Phone Number</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><%= @organization.organizationName %></td>
				<td><%= @organization.organizationStreet %></td>
				<td><%= @organization.organizationCity %></td>
				<td><%= @organization.organizationState %></td>
				<td><%= @organization.organizationZip %></td>
				<td><%= @organization.organizationPhone %></td>
                <%= link_to edit_organization_path do %>
                        <i class="glyphicon glyphicon-cog" style="color:grey"></i>
                    <% end %></td> </td>
			</tr>		
</tbody>

<div class="row">
	<div class="col-md-8">
		<%= render 'shared/page_title', title: "Request a Project" %>
		
		
			  <%= form_for([@organization, Project.new]) do |f| %>
			
			    <div class="field">
			      <h5>Project Name:</h5>
			      <%= f.hidden_field :organization_id, :value => @organization.id %>
			      <%= f.text_field :projectName %>
			      <h5>Requested Start Date:</h5>
			      <%= f.text_field :startDate, :id => "datepicker", :value => Date.today %>
			      
			    </div>
			  
				<%= f.submit "Request Project", class: "btn btn-success" %>
				<% end %>
				

			
	</div>
</div>

<ul>
  <%= render(partial: 'projects/project', collection: @organization.projects) %>
</ul>

<script>
$('#datepicker').datepicker({format: 'yyyy-mm-dd'});
</script>