<%= form_tag(volunteers_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Volunteers Name" %>
<%= submit_tag "Search" %>
<% end %>

<% if @volunteers.present? %>
<div class="table-container">
	<table class="data-table">
		<thead>
			<tr>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Email</th>
				<th>Job Title</th>
				<th>Admin Status</th>
				<th>Actions</th>
			</tr>
		</thead>
  <%= render @volunteers %>
  	</table>
</div>
<% else %>
  <p>There are no volunteers containing the name <%= params[:search] %>.</p>
<% end %>